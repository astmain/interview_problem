{
  "name": "【V3】君臣论-电商插件",
  "description": "",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "popup.html",
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons": {"16": "logo.png", "48": "logo.png", "128": "logo.png"},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      
			"run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["background.js", "aaa.js"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ],
  "permissions": ["storage", "activeTab", "identity", "tabs", "contextMenus", "scripting", "declarativeContent", "webNavigation", "downloads", "alarms", "declarativeNetRequest", "declarativeNetRequestFeedback", "unlimitedStorage"],
  "optional_permissions": ["clipboardWrite", "bookmarks"],
  "externally_connectable": {
    "matches": ["https://*.junchenlun.com/*"]
  },

  "host_permissions": ["https://*.junchenlun.com/*"]
}
